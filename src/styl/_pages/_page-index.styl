.sect__promo
	padding-bottom 30px

// Products
.sect__products
	padding-bottom 110px
.product-card
	&__wrapper
		width 33.3333%	
	&__thumbnail
		display block
		position relative
		overflow hidden
		padding-top 110%
		backface-visibility hidden
		font 16px $Med
		color $light-color
		margin-bottom 35px
		img
			display block
			width 100%
			height 100%
			object-fit cover
			position absolute
			position-center()
			will-change transform
			transition transform .17s ease-in-out
			
		span
			display inline-block
			position absolute
			bottom 45px
			horisontal-center()
			z-index 2
			transition opacity .17s ease-in-out
			opacity 0
			line-height 1
			
			&:before
				pseudo()
				position absolute
				left 100%
				margin-left 15px
				width 76px
				height 9.5px
				background url('../img/icons/svg/arrow_white.svg') 50% 50% no-repeat / 76px 9.5px
				vertical-center()
				transition width .17s ease-in-out
				transition-delay .17s
				width 0
			
		&:before
			pseudo()
			position absolute
			fullSize()
			transition opacity .17s ease-in-out
			background-color rgba($card-overlay-bg, .5)
			z-index 1
			opacity 0
			
		&:hover
			span
				opacity 1
				&:before
					width 76px
			&:before
				opacity 1
			img
				transform translate(-50%, -50%) scale(1.05, 1.05)
				
	&__price
		margin-right 20px
		
	&__tools
		margin-top 35px
		display flex
		align-items center
		justify-content flex-start
		
		.link-wishlist
			margin-right 20px
			
	&__information
		padding-right 10.5%
		
	&__body
		padding-left 
		
	&__title
		font 20px $PBold
		color $alternate-text-color
		a
			color inherit
			&:hover
				color $accent-color
				

.products
	flex 1
	&__row
		display flex
		align-items flex-start
		justify-content space-between
		margin-bottom 60px
		&:last-child
			margin-bottom 0
			
		&:nth-child(even)
			.sect__title--col
				order 2
				padding-right 0
				padding-left 90px
				&:before
					display none
				

.sect__title
	&--col
		width 290px
		padding-right 90px
		position relative
		&:before
			pseudo()
			position absolute
			z-index -1
			pointer-events none
			width 200px
			height 200px
			border-radius 50%
			background-color $color-bg
			top 10px
			left -40px
	
.price
	font 20px $PBold
	color $alternate-text-color
	text-transform uppercase
	
.articul
	color $lighter-text-color
	font-size 12px
	
// Categories
.category-card
	width 25%
	padding 10px
	
	.product-card
		&__thumbnail
			padding-top 100%
	
.categories__row
	margin-left -10px
	margin-right -10px
	
// Sect form

.form

	&-block
		&__col
			width 50%
			padding 0 100px
			&:last-child
				padding-top 55px
			
		&__title
			font 56px $PBold
			color $alternate-text-color
			line-height 1
			margin-bottom 40px
		
		&__notice
			font-size 25px
			color $text-accent-color
			margin-bottom 40px
			
		&__text
			margin-bottom 70px
			max-width 285px
			
		&__img
			position relative
			flex-col-center()
			&--square
				width 335px
				height 390px
				
				
			img
				width auto
				max-width 490px
				position absolute
				position-center()
				