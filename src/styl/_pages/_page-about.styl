.about-us
	&__col
		width 100%
		max-width 500px
		padding 0 30px
		flex 1
		
		.sect__text
			font-size 14px
			color $text-color
		
		.sect__title--col
			width 100%
			max-width 450px
			padding-right 0
		
		&--wide
			flex 1
			max-width 100%
			
		
	&__row
		margin-left -30px
		margin-right -30px
		
	&__content--img
		margin-top 55px
		img
			display 
			
	&__param
		margin-bottom 110px
		font-family $Med
		color $light-color
		&--num
			display block
			line-height 1
			color $accent-color
			font 78px $PBold
			margin-bottom 25px
		&:last-child
			margin-bottom 0
			

.sect__about-us--params
	
	.about-us__content--block_img
		right auto
		left 0
		
		bottom -250px