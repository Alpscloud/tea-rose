.btn
	display inline-block
	font 16px $SemiBold
	padding 22px 70px
	line-height 1
	text-align center
	color $light-color
	background-color $accent-color
	transition all .17s ease-in-out
	backface-visibility hidden
	border-radius 50px
	box-shadow 0px 14px 25px -11px rgba(224,83,83,0.45)
	&:hover
		box-shadow none
	&-wide
		width 100%
		padding-left 15px
		padding-right 15px
		
	
	
	&-with-ic
		font-size 14px
		text-align right
		width 155px
		padding 18px 25px 18px 45px
		background-image url('../img/icons/svg/cart-ic.svg') 
		background-position 17px 50% 
		background-repeat no-repeat
		background-size 20px 18px
		
		&__lg
			padding-top 22px
			padding-bottom 22px
			height 60px
			width 185px
			font-size 16px
			background-size 22px 22px
			background-position 20px 50%
		
	&-cart
		font 14px $Med
		
		&.is-empty
			width 55px
			height 55px
			border-radius 50%
			background-position 50% 50%
			padding 0
			// pointer-events none
			
			.btn-cart__count
				display none
			
		
	&-light
		background-color $light-color
		color $accent-color
		
		&-with-shadow
			background-color $light-color
			color $text-color
			box-shadow $round-input-shadow
			font-family $Reg
			&:hover
				box-shadow none
		
	&-dark
		color $text-color
		box-shadow none
		font-family $Med
		background-color $color-bg
		&:hover
			background-color $accent-color
			color $light-color
			
	&-transparent
		background-color transparent
		color $text-color
		border 1px solid $accent-color
		box-shadow none
		font-family $Med
		&:hover
			background-color $accent-color
			color $light-color
			
	&-secondary-color
		background-color $secondary-color
		color $light-color
		
		&:hover
			background-color $accent-color
			color $light-color
	
	&-grey
		background-color #f7f5f5
		color $secondary-color
			
	&-md
		font-size 14px
		padding-top 18px
		padding-bottom 18px
			
			
	&-equal
		width 100%
		max-width 230px
		padding-left 15px
		padding-right 15px

		
	&__close
		display inline-block
		width 16px
		height 16px
		svg
			svg()
			fill #090909
		&:hover
			svg
				fill $accent-color
				
	&__toggle-subnav
		display none
		width 12px
		height 5px
		background url('../img/icons/svg/arrow-sm.svg') 50% 50% no-repeat / 12px 5px
	
		
	&__arrow
		display inline-block
		width 76px
		height 9.5px
		will-change transform 
		backface-visibility hidden
		&--prev
			transform scaleX(-1)
		&--ic
			block()
		svg
			svg()
			fill $accent-color
			
		&:hover
			svg
				fill $dark-accent-color
				
	&__tab
		background-color $light-color
		border-radius 50px
		padding 10px 15px
		text-align center
		font 14px $Med
		color $text-color
		&.is-active,
		&:hover
			background-color $alternate-color
			color $light-color
		
	&__top
		display none
		border-radius 50%
		width 40px
		height 40px
		position fixed
		right 30px
		bottom 30px
		background-color $accent-color
		z-index 10
		text-align center
		transition all .17s ease-in-out
		box-shadow 0px 0px 13px 0px rgba($dark-color, 0.21)
		&:after
			content ''
			display inline-block
			position absolute
			top 15px
			left 10px
			width 20px
			height 20px
			transform rotate(-45deg)
			border-top 1px solid $dark-color
			border-right 1px solid $dark-color
			transition all .23s ease-in-out
		&:hover
			background-color $dark-color
			transform scale(1.1)
			box-shadow 0px 0px 13px 0px rgba($accent-color, 0.21)
			&:after
				border-top 1px solid $accent-color
				border-right 1px solid $accent-color
		

	&__hamburger
		display inline-block
		flex none
		width 50px
		height 50px
		border-radius 50%
		background-color $accent-color
		position relative
		transition background-color .17s ease-in-out
		margin-left 15px
		&--line
			width 27px
			height 2px
			background-color $dark-color
			display block
			margin 6px auto
			transition all 0.3s ease-in-out	
		&.is-active
			.btn__hamburger--line
				&:nth-child(1)
					transform translateY(8px) rotate(45deg)
				&:nth-child(2)
					opacity 0	
				&:nth-child(3)
					transform translateY(-8px) rotate(-45deg)
					
	&__reset
		display inline-block
		position relative
		padding-right 30px
		font 14px $Med
		line-height 1
		text-align left
		&--ic
			display block
			width 12px
			height 12px
			position absolute
			vertical-center()
			right 0
		
		svg
			svg()
			fill $accent-color
			
		&:hover
			color $accent-color
			svg
				fill $accent-color
				
	&__quantity
		width 50px	
		height 50px	
		line-height 50px
		border-radius 50%
		background-color $accent-color
		box-shadow 0px 3px 3px -1px rgba($dark-color,0.16)
		color $light-color
		font-size 40px
		font-family $Reg
		position relative
		svg
			display block
			fill $light-color
			width 11px
			height 11px
			position absolute
			position-center()
			
		
				
		&:hover
			background-color $dark-accent-color
			box-shadow none
			

			
	&__delete
		background-color $color-bg
		svg
			fill $accent-color
			
		&:hover
			background-color $dark-accent-color
			svg
				fill $light-color
	
	&__toggle
		position relative
		display inline-block
		&:before
			content attr(data-default-text)
		&.is-toggled
			&:before
				content attr(data-toggled-text)