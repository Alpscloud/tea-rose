.breadcrumbs
	margin-bottom 35px
	&__item
		display inline-block
		margin-right 6px
		position relative
		line-height 1
		&:after
			content '-'
			position absolute
			left 100%
			vertical-center()
			margin-left 2px
			margin-top 1px
			color $breadcrumbs-link-color
		&:last-child
			margin-right 0
			&:after
				display none
	&__link
		font-size 10px
		color $breadcrumbs-link-color
		&.is-active
			color $accent-color
		&:hover
			color $accent-color