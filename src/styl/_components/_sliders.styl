.slider
	&__loader
		position absolute
		fullSize()
		z-index 10
		background-color $light-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none
	

	&__pagination
		.swiper-pagination
			&-bullet
				width 40px
				height 40px
				border 1px solid transparent
				opacity 1
				outline none
				position relative
				border-radius 50%
				background-color transparent
				transition border-color .17s ease-in-out
				&:before,
				&:after
					pseudo()
					position absolute
					position-center()
					border-radius 50%
					transition all .17s ease-in-out
				&:before
					width 25px
					height 25px
					background-color #f7f5f5
					opacity 0
					
				&:after
					width 8px
					height 8px
					background-color #dbd2d2
					
				&:hover
					&:before
						opacity 1
					&:after
						background-color $accent-color
				
				&-active
					border-color #d3d3d3
					&:before
						opacity 1
					&:after
						background-color $accent-color
						

.swiper-container
	*
		box-sizing border-box
		
// Promo slider
.promo-slider
	&__controls
		margin-top 25px
		
		.slider__pagination
			margin-right 90px