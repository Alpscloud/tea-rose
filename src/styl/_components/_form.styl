input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)




.form
	max-width 285px
	
.input
	display block
	width 100%
	padding 0 0 10px 0
	text-align left
	background-color $light-color
	border-bottom 2px solid $border-color
	font 1em $Reg
	color $text-color
	&:hover,
	&:focus
		border-color $accent-color
	&::-webkit-input-placeholder
		font 16px $Reg
		color $text-color
	&::-moz-placeholder
		font 16px $Reg
		color $text-color
	&:-moz-placeholder
		font 16px $Reg
		color $text-color
	&:-ms-input-placeholder
		font 16px $Reg
		color $text-color
		
	&__wrapper
		margin-bottom 50px
		position relative
		
	&.is-error
		border-color red
		
	&-round
		padding 22px
		display block
		width 100%
		border-radius 50px
		font 16px $Reg
		color $text-color
		background-color $light-color
		text-align center
		box-shadow $round-input-shadow
		&:focus,
		&:hover
			box-shadow none
		&::-webkit-input-placeholder
			font 16px $Reg
			color $text-color
		&::-moz-placeholder
			font 16px $Reg
			color $text-color
		&:-moz-placeholder
			font 16px $Reg
			color $text-color
		&:-ms-input-placeholder
			font 16px $Reg
			color $text-color
		&__wrapper
			max-width 250px


.checkbox,
.radio
	position relative
	display inline-block
	margin-left 0
	padding-left 40px
	font 14px $Med
	line-height 1
	color rgba($dark-color, .3)
	
	&:before,
	&:after
		pseudo()
		transition all .25s ease-in-out
		position absolute
		left 0
		top 3px
			
	&__label
		cursor pointer
		display inline-block
		input
			display none

.checkbox
	&:before
		border-radius 4px
		width 18px
		height 18px
		border 1px solid $accent-color
		background-color $light-color
		box-shadow $round-input-shadow
	&:after
		width 12px
		height 12px
		border-radius 4px
		background-color $accent-color
		position absolute
		left 3px
		top 6px
		opacity 0
	&__label
		input
			&:checked 
				+ span
					&:after
						opacity 1
			
.radio
	&:before
	&:after
		border-radius 50%
	&:before
		width 18px
		height 18px
		border 1px solid $accent-color
		background-color $transparent
	&:after
		width 12px
		height 12px
		background-color $light-color
		left 3px
		top 8px
		opacity 0
		
	&__label
		input
			&:checked 
				+ span
					&:before
						border-color $dark-color
						background-color $dark-color
					&:after
						opacity 1

		