input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)




.form
	max-width 285px
	
.input
	display block
	width 100%
	padding 0 0 10px 0
	text-align left
	background-color $light-color
	border-bottom 2px solid $border-color
	font 1em $Reg
	color $text-color
	&:hover,
	&:focus
		border-color $accent-color
	&::-webkit-input-placeholder
		font 16px $Reg
		color $text-color
	&::-moz-placeholder
		font 16px $Reg
		color $text-color
	&:-moz-placeholder
		font 16px $Reg
		color $text-color
	&:-ms-input-placeholder
		font 16px $Reg
		color $text-color
		
	&__wrapper
		margin-bottom 50px
		position relative
		
	&.is-error
		border-color red
		
	&-round
		padding 22px
		display block
		width 100%
		border-radius 50px
		font 16px $Reg
		color $text-color
		background-color $light-color
		text-align center
		box-shadow $round-input-shadow
		&:focus,
		&:hover
			box-shadow none
		&::-webkit-input-placeholder
			font 16px $Reg
			color $text-color
		&::-moz-placeholder
			font 16px $Reg
			color $text-color
		&:-moz-placeholder
			font 16px $Reg
			color $text-color
		&:-ms-input-placeholder
			font 16px $Reg
			color $text-color
		&__wrapper
			max-width 250px


.checkbox,
.radio
	position relative
	display inline-block
	margin-left 0
	padding-left 40px
	font 14px $Med
	line-height 1
	color rgba($dark-color, .3)
	transition color .17s ease-in-out
	
	&:before,
	&:after
		pseudo()
		transition all .17s ease-in-out
		position absolute
		left 0
		top 3px
			
	&__label
		cursor pointer
		display inline-block
		input
			display none
			
	&:before
		border-radius 50%
		width 16px
		height 16px
		background-color $light-color
		box-shadow $round-input-shadow
	&:after
		width 9px
		height 9px
		border-radius 50%
		background-color #ccc
		position absolute
		left 3.5px
		top 6.5px
	
	&__label
		input
			&:checked 
				+ span
					&:after
						background-color $accent-color

		

.checkbox-filter,
.radio-filter
	padding-left 25px
	font 12px $Reg
	color $dark-color

	&:hover
		color $accent-color
	&:before
		vertical-center()
	&:after
		left 3.5px
		vertical-center()
			

		