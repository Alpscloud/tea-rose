.choise-results
	&__wrapper
		position fixed
		bottom 0
		left 0
		width 100%
		z-index 15
		background-color $dark-accent-color
		will-change transform
		transition all .17s ease-in-out
		color $light-color
		padding 7px 0 
		
		opacity 0
		pointer-events none
		visibility hidden
		transform translateY(102%)
		
		&.is-active
			opacity 1
			pointer-events auto
			visibility visible
			transform translateY(0)
		
	&__text
		font 16px $SemiBold
		
	&__value
		font 57px $PBold
		line-height 1
		
	&__link
		position relative
		display inline-block
		padding-right 70px
		font 16px $SemiBold
		color $light-color
		margin-right 20px
		.round-ic
			position absolute
			vertical-center()
			right 0
			
		&:hover
			color $light-accent-color
			.round-ic
				background-color $light-accent-color
				box-shadow none
			