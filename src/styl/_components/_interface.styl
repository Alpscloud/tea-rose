// socials
.socials
	font-size 0
	&__item
		display inline-block
		margin-right 25px
		&:last-child
			margin-right 0
	&__link
		display block
		width 20px
		height 20px
		&--ic
			block()
		
		svg
			svg()
			fill $socials-ic-color
			
		&:hover
			svg
				fill $accent-color
				
	&-accent
		.socials
			&__link
				width 38px
				height 38px
				border-radius 50%
				background-color $dark-accent-color
				box-shadow 0px 3px 3px -1px rgba($dark-color, 0.16)
				position relative
				&--ic
					width 20px
					height 20px
					position absolute
					position-center()
				svg
					fill $light-color
					
				&:hover
					background-color $light-color
					svg
						fill $dark-accent-color
				
				
// Links
.phone-link
	font 22px $Med
	color $dark-color
	line-height 1
	&:hover
		color $accent-color
		
.link
	display inline-block
	position relative
	&:before
		pseudo()
		position absolute
		left 0
		bottom -0.5em
		width 0
		height 2px
		background-color $light-accent-color
		transition width .17s ease-in-out
		
		
	&:hover
		&:before
			width 100%
			
.link-wishlist
	position relative
	display inline-block
	width 50px
	height 50px
	border-radius 50%
	background-color $dark-accent-color
	box-shadow 0px 3px 3px -1px rgba($dark-color,0.16)
	&:hover
		box-shadow none
	&__ic
		block()
		width 20px
		height 20px
		position absolute
		position-center()
		
	svg
		svg()
		fill $light-color
		
	&__lg
		width 60px
		height 60px
		
		.link-wishlist__ic
			width 27px
			height 27px
			
	&.is-active
		background-color $wishlist-active-color
		
// Delivery
.delivery
	margin 0 30px
	&__text
		position relative
		padding-left 55px
		color $dark-color
		font-size 22px
		opacity .2
		&:before
			pseudo()
			position absolute
			left 0
			vertical-center()
			background url('../img/icons/svg/delivery-ic.svg') 50% 50% no-repeat / 43px 43px
			width 43px
			height 43px
			


			
// Languages
.languages
	margin-right 25px
	&__item
		display inline-block
		margin-right 26px
		&:last-child
			margin-right 0
			
	&__link
		font 14px $Med
		color $text-color
		opacity .3
		line-height 1
		&:hover
			opacity 1
			
		&.is-active
			opacity 1
			&:before
				width 100%
				

	
// Tooltip
.tooltip
	display block
	position absolute
	top 100%
	right 100%
	z-index 5
	text-align center
	color $light-color
	font 12px $Med
	background-color $secondary-color
	border-radius 50px 0 50px 50px
	line-height 1
	padding 6px 17px
	white-space nowrap
	box-shadow 0px 5px 15px 0px rgba($dark-color, 0.17)
	transition all .17s ease-in-out
	
	margin-top 25px
	opacity 0
	visibility hidden
	pointer-events none
	
	&:before
		pseudo()
		position absolute
		bottom 100%
		right 0
		width 0
		height 0
		border-style solid
		border-width 0 0 8px 8px
		border-color transparent transparent $secondary-color transparent
		margin-top -1px
	&__wrapper
		position relative
		display inline-block
		&:hover
			.tooltip
				margin-top 15px
				opacity 1
				visibility visible
				&-top
					margin-top 0
					margin-bottom 15px
				
	&-top
		border-radius 50px 50px 50px 0
		top auto
		bottom 100%
		right auto
		left 100%
		margin-left -15px
		margin-top 0
		margin-bottom 25px
		&:before
			border-width 8px 8px 0 0
			border-color $secondary-color transparent transparent transparent
			bottom auto
			top 100%
			right auto
			left 0
				


		
// Decors
.decor-img
	display block
	width auto
	max-width 100%
	margin-bottom 25px
	
.permalink
	font 16px $Med
	color $text-accent-color
	line-height 1
	&:hover
		color $accent-color
		

		
// Icons
.icon-link
	display inline-block
	width 20px
	height 20px
	position relative
	&__counter
		width 16px
		height 16px
		border-radius 50%
		background-color $wishlist-active-color
		color $light-color
		flex-col-center()
		font 9px $Med
		position absolute
		bottom 100%
		left 100%
	
	&.is-empty
		.icon-link__counter
			display none
	&__ic
		block()
		
	svg
		svg()
		fill $text-color
		
	&:hover
		svg
			fill $dark-accent-color
		
.block-with-ic
	display inline-block
	position relative
	padding-left 30px
	&:before
		pseudo()
		position absolute
		left 0
		width 20px
		height 20px
		background-position 50% 50%
		background-repeat no-repeat
		background-size contain
		vertical-center()
		
	&__address
		&:before
			background-image url('../img/icons/svg/location.svg')
			top 4px
			transform none
			
	&__phone
		&:before
			background-image url('../img/icons/svg/phone.svg')
			
	&__email
		&:before
			background-image url('../img/icons/svg/mail.svg')
			

.round-ic
	display inline-block
	border-radius 50%
	background-color $light-color
	box-shadow $round-input-shadow
	width 50px
	height 50px
	position relative
	transition all .17s ease-in-out
	&:hover
		background-color $light-accent-color
		box-shadow none
	
	svg
		display block
		width 14px
		height 14px
		fill #696969
		position absolute
		position-center()
		transition fill .17s ease-in-out
		
// Price range
.price-range
	height 2px
	background-color #bebebe
	border none
	box-shadow none
	
	.noUi
		&-target
			height 2px
			background-color #bebebe
			border none
			box-shadow none
			
		&-connect
			background-color $accent-color

		&-handle
			width 16px
			height 16px
			border-radius 50%
			background-color $light-color
			border none
			box-shadow $round-input-shadow
			top -7.5px
			right -10px
			outline none
			&:before
				display none
			&:after
				pseudo()
				position absolute
				position-center()
				width 9px
				height 9px
				border-radius 50%
				background-color $accent-color
	&__inputs
		margin-bottom 30px
		.row
			flex-wrap nowrap
		&--divider
			flex 1
			display block
			margin 0 10px 14.5px 10px
			height 2px
			background-color $accent-color
			
	&__input
		display block
		width 100%
		border-radius 50px
		background-color $light-color
		box-shadow $round-input-shadow
		text-align center
		padding 8px
		font 12px $Reg
		color $text-color
		&:hover,
		&:focus
			box-shadow none
		&--block
			width 85px
			flex none
			text-align center
		&--label
			font 12px $Reg
			
			margin-bottom 8px
			
