.socials
	font-size 0
	&__item
		display inline-block
		margin-right 25px
		&:last-child
			margin-right 0
	&__link
		display block
		width 20px
		height 20px
		&--ic
			block()
		
		svg
			svg()
			fill $socials-ic-color
			
		&:hover
			svg
				fill $accent-color
				
	&-accent
		.socials
			&__link
				width 38px
				height 38px
				border-radius 50%
				background-color $dark-accent-color
				box-shadow 0px 3px 3px -1px rgba($dark-color, 0.16)
				position relative
				&--ic
					width 20px
					height 20px
					position absolute
					position-center()
				svg
					fill $light-color
					
				&:hover
					background-color $light-color
					svg
						fill $dark-accent-color
				
				

.phone-link
	font 22px $Med
	color $dark-color
	line-height 1
	&:hover
		color $accent-color
		

.delivery
	margin 0 30px
	&__text
		position relative
		padding-left 55px
		color $dark-color
		font-size 22px
		opacity .2
		&:before
			pseudo()
			position absolute
			left 0
			vertical-center()
			background url('../img/icons/svg/delivery-ic.svg') 50% 50% no-repeat / 43px 43px
			width 43px
			height 43px
			

.link
	display inline-block
	position relative
	&:before
		pseudo()
		position absolute
		left 0
		bottom -0.5em
		width 0
		height 2px
		background-color $light-accent-color
		transition width .17s ease-in-out
		
		
	&:hover
		&:before
			width 100%
			

.languages
	margin-right 25px
	&__item
		display inline-block
		margin-right 26px
		&:last-child
			margin-right 0
			
	&__link
		font 14px $Med
		color $text-color
		opacity .3
		line-height 1
		&:hover
			opacity 1
			
		&.is-active
			opacity 1
			&:before
				width 100%
				

.icon-link
	display inline-block
	width 20px
	height 20px
	&__ic
		block()
		
	svg
		svg()
		fill $text-color
		

.tooltip
	display block
	position absolute
	top 100%
	right 100%
	z-index 5
	text-align center
	color $light-color
	font 12px $Med
	background-color $secondary-color
	border-radius 50px 0 50px 50px
	line-height 1
	padding 6px 17px
	white-space nowrap
	box-shadow 0px 5px 15px 0px rgba($dark-color, 0.17)
	transition all .17s ease-in-out
	
	margin-top 25px
	opacity 0
	visibility hidden
	pointer-events none
	
	&:before
		pseudo()
		position absolute
		bottom 100%
		right 0
		width 0
		height 0
		border-style solid
		border-width 0 0 8px 8px
		border-color transparent transparent $secondary-color transparent
		margin-top -1px
	&__wrapper
		position relative
		display inline-block
		&:hover
			.tooltip
				margin-top 15px
				opacity 1
				visibility visible
				&-top
					margin-top 0
					margin-bottom 15px
				
	&-top
		border-radius 50px 50px 50px 0
		top auto
		bottom 100%
		right auto
		left 100%
		margin-left -15px
		margin-top 0
		margin-bottom 25px
		&:before
			border-width 8px 8px 0 0
			border-color $secondary-color transparent transparent transparent
			bottom auto
			top 100%
			right auto
			left 0
				

.link-wishlist
	position relative
	display inline-block
	width 50px
	height 50px
	border-radius 50%
	background-color $dark-accent-color
	box-shadow 0px 3px 3px -1px rgba($dark-color,0.16)
	&:hover
		box-shadow none
	&__ic
		block()
		width 20px
		height 20px
		position absolute
		position-center()
		
	svg
		svg()
		fill $light-color
		

.decor-img
	display block
	width auto
	max-width 100%
	margin-bottom 25px
	
.permalink
	font 16px $Med
	color $text-accent-color
	&:hover
		color $accent-color
		

.decor-bg
	position absolute
	top 65px
	left 0
	width 100%
	height 1030px
	overflow hidden
	z-index -1
	will-change transform
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba(#333633, .86)
		

.block-with-ic
	display inline-block
	position relative
	padding-left 30px
	&:before
		pseudo()
		position absolute
		left 0
		width 20px
		height 20px
		background-position 50% 50%
		background-repeat no-repeat
		background-size contain
		vertical-center()
		
	&__address
		&:before
			background-image url('../img/icons/svg/location.svg')
			top 4px
			transform none
			
	&__phone
		&:before
			background-image url('../img/icons/svg/phone.svg')
			
	&__email
		&:before
			background-image url('../img/icons/svg/mail.svg')
		