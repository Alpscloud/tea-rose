.aside
	width 100%
	max-width 270px
	
	&-form
		
		.btn
			min-width 155px
			padding-left 15px
			padding-right 15px
		&__reset
			padding-right 20px
			.btn__reset
				width 100%
				
			&--btn_mobile
				display none
				font 14px $Med
				color $text-accent-color
				margin-bottom 30px
				
				
		&__filters
			box-shadow $round-input-shadow
			// padding 30px 20px
			margin-bottom 30px
			margin-top 50px
			background-color #f7f7f7
			&--block
				padding 0 20px 20px 20px
				&_wrapper
					position relative
		
					&:before
						pseudo()
						position absolute
						left 20px
						right 20px
						bottom 0
						height 1px
						background-color #e0e0e0
			
					
				
					&:last-child
						&:before
							display none
						// border-bottom none
						// padding-bottom 0
						// margin-bottom 0
						
				&_btn
					display block
					text-align left
					width 100%
					padding 20px
					line-height 1
					font 14px $Med
					position relative
					
					&:after
						pseudo()
						position absolute
						right 20px
						top 26px
						width 12px
						height 5px
						will-change transform
						transition transform .17s ease-in-out
						background url('../img/icons/svg/arrow-sm.svg') 50% 50% no-repeat / 12px 5px
						
					&:hover
						color $accent-color
					&.is-active
						&:after
							transform rotate(-180deg)
							
				.checkbox__label,
				.radio__label
					margin-bottom 20px
					width 100%
					&:last-child
						margin-bottom 0